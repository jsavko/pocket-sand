{{#unless isGM}}
<div class='pocketSand' style="background: rgba(0, 0, 0, 1); height: 100%; margin: 0; display: flex; justify-content: center; align-items: center; z-index: calc(var(--z-index-canvas) + 1);">
    {{#if img}}
    <img src="{{img}}">
    {{/if}} 
    {{#if video}}
      <video width="100%" height="100%" autoplay playsinline>
        <source 
            src="{{video}}" 
            type="video/webm">
    </video>  
    {{/if}} 
</div>
{{/unless}}
